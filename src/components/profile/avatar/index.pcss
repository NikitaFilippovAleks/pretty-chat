.profile-avatar {
  display: flex;

  align-items: center;
  justify-content: center;

  width: 130px;
  height: 130px;
  overflow: hidden;
  background-color: $gray;
  border-radius: 50%;

  & img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  &__wrapper {
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: transparent;
    border: 0;
  }

  &__title {
    margin-top: 10px;
  
    font-weight: 600;
    color: $light;
  }
}
