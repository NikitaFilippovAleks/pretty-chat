.inputFile {
  &__button {
    color: $blue;
    text-decoration: underline;

    background-color: transparent;
    border: 0;
  }

  &__input {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2000;
    width: 100%;
    /* height: 100%; */
    opacity: 0;

    & input {
      width: 100%;
    }
  }
}
