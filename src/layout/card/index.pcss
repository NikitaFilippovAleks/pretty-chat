.layout-card {
  z-index: 1000;
  display: flex;

  flex-direction: column;

  align-items: center;

  width: 340px;
  padding: 0 20px;
  
  border-radius: 10px;
  box-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

  &_secondary {
    background-color: $darkSecondary;
  }

  &_primary {
    background-color: $darkPrimary;
  }
}
